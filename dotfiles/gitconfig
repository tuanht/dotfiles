[alias]
	s = status -s
    i = add -i
	amend = commit --amend --reuse-message=HEAD
    cdiff = diff --cached
    sdiff = diff --staged
    udiff = diff HEAD ; diff unstaged changed
    hunk = add --patch
    pushr = push --set-upstream origin HEAD
    pull-rsub = pull --recurse-submodules

