# vim: set ft=zsh:
alias cd-evs="cd ~/everystay/base"

alias evs-mysql="mysql -h evs_mariadb -ueverystay -pabc123 everystay"
alias evs-owner="mysql -h evs_mariadb -ueverystay -pabc123 everystay -e 'select o.id as oid,c.id as cid,o.email,o.code,c.channel,c.active,c.house_status from owner o left join owner_channel_manager c on o.id = c.owner_id;'"
alias evs-mysql-dump="mysqldump -h evs_mariadb -ueverystay -pabc123 everystay > ./evs_mariadb_`date "+%Y%m%d"`.sql"

PEM="~/Documents/Everystay/local\ machine\ config/everystay.pem"
alias ssh-dev="ssh -i $PEM ubuntu@everystay.dev"
alias ssh-uat="ssh -i $PEM ubuntu@everystay.uat"
alias ssh-prod="ssh -i $PEM ubuntu@everystay.prod"
alias ssh-evs="ssh -i $PEM"
alias scp="scp -i $PEM"

alias php-enable-debug="ln -s /Users/tuanht/everystay/ext-xdebug.ini /usr/local/etc/php/7.2/conf.d/ && brew services restart php72"
alias php-disable-debug="rm /usr/local/etc/php/7.2/conf.d/ext-xdebug.ini && brew services restart php72"

alias docker-compose-evs="docker-compose --project-directory ~/everystay/evs_vm --file ~/everystay/evs_vm/docker-compose.yml"
alias docker-root="docker exec -it evs_phpfpm /bin/sh"
alias docker-www="docker exec -it --user www-data evs_phpfpm /bin/sh"

alias evs-console="php ~/everystay/base/bin/console"
alias debug-evs-console="php --php-ini ~/everystay/ext-xdebug.ini ~/everystay/base/bin/console"
alias evs-phpcs="/usr/bin/php ~/everystay/base/vendor/bin/phpcs -p --standard=PSR2 --extensions=php ~/everystay/base/src/"
alias evs-supervisorctl="supervisorctl -c /usr/local/etc/supervisord.ini"
