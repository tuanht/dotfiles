# vim: set ft=bash:
#!/bin/bash

PORT=22
USER=$(whoami)

. ./.env

base="/volume1/homes/${USER}"

if [ -z $REMOTE ]; then
    echo "Rsync Remote is not configured"
    exit 1
fi

if [ ! -z $BASE_DIR ]; then
    base=$BASE_DIR
fi

bpwd=$(basename $PWD)
dir=${bpwd%%@*}

# See "rsync compare directories?"
# https://unix.stackexchange.com/a/351112
rsync -rvnc --delete \
    --exclude={'.env**','.deleted/**','@eaDir'} \
    -e "ssh -p ${PORT}" \
    ./ \
    "${USER}@${REMOTE}:${base}/${dir}"

