alias evs-mysql="docker exec -it evs_mariadb mysql -ueverystay -pabc123 everystay"
alias evs-owner="mysql -h 127.0.0.1 -ueverystay -pabc123 everystay -e 'select o.id as oid,c.id as cid,o.email,o.code,c.channel from owner o left join owner_channel_manager c on o.id = c.owner_id;'"

alias ssh-dev="ssh -i ~/Documents/Everystay/everystay.pem ubuntu@everystay.dev"
alias ssh-uat="ssh -i ~/Documents/Everystay/everystay.pem ubuntu@everystay.uat"
alias ssh-prod="ssh -i ~/Documents/Everystay/everystay.pem ubuntu@everystay.prod"
alias ssh-evs="ssh -i ~/Documents/Everystay/everystay.pem"
alias scp="scp -i ~/Documents/Everystay/everystay.pem"

alias php-enable-debug="ln -s /Users/tuanht/everystay/ext-xdebug.ini /usr/local/etc/php/7.2/conf.d/ && brew services restart php72"
alias php-disable-debug="rm /usr/local/etc/php/7.2/conf.d/ext-xdebug.ini && brew services restart php72"

alias docker-compose="docker-compose --project-directory ~/everystay/evs_vm --file ~/everystay/evs_vm/docker-compose.yml"
alias docker-root="docker exec -it evs_phpfpm /bin/sh"
alias docker-www="docker exec -it --user www-data evs_phpfpm /bin/sh"

alias evs-console="php ~/everystay/base/bin/console"
alias debug-evs-console="php --php-ini ~/everystay/ext-xdebug.ini ~/everystay/base/bin/console"
alias evs-phpcs="/usr/bin/php ~/everystay/base/vendor/bin/phpcs -p --standard=PSR2 --extensions=php ~/everystay/base/src/"
